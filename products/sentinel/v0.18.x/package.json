{
  "name": "sentinel-docs",
  "description": "Documentation website for HashiCorp Sentinel",
  "version": "1.0.0",
  "author": "HashiCorp",
  "dependencies": {},
  "devDependencies": {
    "@hashicorp/platform-cli": "^1.2.0",
    "dart-linkcheck": "2.0.15",
    "husky": "4.3.8",
    "prettier": "2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run generate-changelog && git add content/sentinel/docs/changelog.mdx && next-hashicorp precommit"
    }
  },
  "scripts": {
    "format": "next-hashicorp format",
    "generate-changelog": "node lib/generate-changelog.js",
    "generate:analytics": "next-hashicorp analytics",
    "generate:component": "next-hashicorp generate component",
    "generate:dato:types": "next-hashicorp codegen:datotypes",
    "linkcheck": "linkcheck https://docs.hashicorp.com/sentinel",
    "lint": "next-hashicorp lint",
    "start": "./scripts/website-start.sh",
    "vercel-build": "npm run generate-changelog && npm run build build",
    "build": "./scripts/website-build.sh"
  },
  "engines": {
    "npm": ">=7.0.0"
  }
}
